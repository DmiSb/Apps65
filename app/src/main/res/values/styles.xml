<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <!-- Custom Styles -->
    <style name="BackButton">
        <item name="android:layout_width">@dimen/size_56</item>
        <item name="android:layout_height">@dimen/size_56</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:padding">@dimen/size_16</item>
    </style>

</resources>
